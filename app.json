{
  "expo": {
    "name": "題目カウンター",
    "slug": "daimoku-counter",
    "extra": {
      "eas": {
        "projectId": "fed7666d-6b9e-4aa1-a08b-60bc365877ad"
      }
    },
    "description": "音声認識で唱題の回数を自動カウントするアプリです。手動カウントにも対応し、日々の唱題記録を管理できます。",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "daimokucounter",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yoshi0703.daimokucounter",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.yoshi0703.daimokucounter"
        ]
      },
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "唱題の回数を数えるために音声認識を使用します",
        "NSMicrophoneUsageDescription": "唱題の音声を聞くためにマイクを使用します",
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "唱題記録のスクリーンショットを保存するためにフォトライブラリを使用します",
        "UIBackgroundModes": [
          "audio"
        ],
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": true
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yoshi0703.daimokucounter"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "唱題の音声を聞くためにマイクを使用します",
          "speechRecognitionPermission": "唱題の回数を数えるために音声認識を使用します"
        }
      ],
      "expo-audio",
      "expo-secure-store",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
